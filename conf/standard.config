params {
    outdir = "${baseDir}/results"
    reads = "${baseDir}/data/full_data/*_{R1,R2}*fastq.gz"
}

process {
    errorStrategy = { task.attempt < 3 ? 'retry' : 'terminate' }
    maxRetries = 2

    withName:
    "TBREFINE" {
        cpus = 8
        memory = 8.GB
    }

    withName:
    "TBBWA" {
        cpus = 4
        memory = 8.GB
    }

    withName:
    "TBVARIANTS" {
        cpus = 4
        memory = 8.GB
    }

    withName:
    "TBPILE" {
        cpus = 4
        memory = 4.GB
    }

    withName:
    "TBSTRAINS" {
        cpus = 4
        memory = 4.GB
    }

    withName:
    "TBLIST" {
        cpus = 8
        memory = 15.GB
    }

    withName:
    "TBSTATS" {
        cpus = 4
        memory = 4.GB
    }

    withName:
    "TBAMEND" {
        cpus = 8
        memory = "15 GB"
    }

    withName:
    "TBGROUPS" {
        cpus = 4
        memory = 4.GB
    }

    withName:
    "TBJOIN" {
        cpus = 4
        memory = 4.GB
    }

    withName:
    "TBFULL" {
        cpus = 8
        memory = 35.GB
    }


}

