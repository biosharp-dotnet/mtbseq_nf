params {
    outdir = "/work/results"
}

process {

    errorStrategy = { task.attempt < 3 ? 'retry' : 'ignore' }

    executor = 'k8s'

    withName:
    ".*" {
        container = 'quay.io/biocontainers/mtbseq:1.0.3--pl526_1'
        cpus = 1
        memory = 2.GB
    }
}

k8s {

    namespace = 'nfkube'

    serviceAccount = 'nfkubelaunchersa'

    storageClaimName = 'nfkubevolumeclaim'

    storageMountPath = '/work'

}
