genomeIds = ["ERR841438", "ERR841440"]

// NCBI API key
apiKey = ""

library_name = "somelib"

outdir = "/scratch/results"

user = "root"

mtbseq_project_name = "projectname"

local_location = "/scratch/data/single_sample" // or multiple_samples

samplesheet_name = "samples.tsv"


// Module level parameters
TBBWA {
    results_dir = "${params.outdir}/tbbwa"
